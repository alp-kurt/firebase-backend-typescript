rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /sessions/{sessionId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.resource.data.keys().hasOnly(["sessionId","region","status","createdAt","updatedAt"])
        && request.resource.data.sessionId is string
        && request.resource.data.region is string
        && request.resource.data.status in ["pending","active","completed","failed"]
        && request.resource.data.createdAt is timestamp
        && request.resource.data.updatedAt is timestamp;

      allow update: if request.auth != null
        && request.resource.data.keys().hasOnly(["sessionId","region","status","createdAt","updatedAt"])
        && request.resource.data.sessionId == resource.data.sessionId
        && request.resource.data.createdAt == resource.data.createdAt
        && request.resource.data.region is string
        && request.resource.data.status in ["pending","active","completed","failed"]
        && request.resource.data.updatedAt is timestamp;

      allow delete: if false;
    }
  }
}
