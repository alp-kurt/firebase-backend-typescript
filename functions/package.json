{
  "name": "firebase-backend-typescript-functions",
  "private": true,
  "main": "lib/index.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint --ext .ts src test/**/*.ts scripts/**/*.ts --no-error-on-unmatched-pattern",
    "test": "jest",
    "serve": "firebase emulators:start --only functions,firestore",
    "deploy": "firebase deploy --only functions",
    "predeploy:check": "npm run lint && npm run test && npm run build",
    "ci": "npm run lint && npm run test && npm run build",
    "deploy:prod": "npm run ci && firebase deploy --only functions",
    "deploy:fast": "npm run build && firebase deploy --only functions",
    "deploy:dry": "npm run ci && firebase deploy --only functions --dry-run"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "firebase-admin": "^12.7.0",
    "firebase-functions": "^5.1.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^2.0.16",
    "eslint": "^8.57.0",
    "firebase-tools": "^15.5.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "5.5.4"
  }
}
